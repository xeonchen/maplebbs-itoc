    send_to_user(cu,"\033[1;35m$$ §A¤w¸gµ²§ô±ß¤Wªº¬¡°Ê¤F\033[0m",0,MSG_MESSAGE)
;
    return;
  }

  cu->killflag |= KILL_TALKED;

  kill_on_user_over(room);
