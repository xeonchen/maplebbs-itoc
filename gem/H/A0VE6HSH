static int
speak_action(cu, cmd, msg)
  ChatUser *cu;
  char *cmd;
  char *msg;
{
  ChatAction *cap;
  char *verb, buf[256];

  for (cap = speak_data; verb = cap->verb; cap++)
  {
    if (str_equal(verb, cmd))
    {
      sprintf(buf, "[1;32m%s [31m%s¡G[33m %s[m",
    cu->chatid, cap->part1_msg, msg);
      send_to_room(cu->room, buf, cu->userno, MSG_MESSAGE,cu);
      return 0;
    }
  }
  return 1;
}


