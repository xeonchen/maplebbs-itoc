static void kill_police_over(room,cu)
  ChatRoom *room;
  ChatUser *cu;
{
  if(cu->killflag & KILL_KNOCKOUT)
  {
    send_to_user(cu,"\033[1;35m$$ §Aªº»îÆFÁÙ¨S¦³¦^¨ì¨­Åé¸Ì©O\033[0m",0,MSG_MESS
AGE);
    return;
